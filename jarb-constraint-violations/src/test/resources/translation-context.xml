<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Attempts to translate exceptions into more "obvious" constraint violation exceptions -->
    <bean class="org.jarbframework.violation.integration.ConstraintViolationExceptionTranslatingBeanPostProcessor">
        <property name="translator">
            <bean class="org.jarbframework.violation.integration.ConstraintViolationExceptionTranslatorFactoryBean">
                <property name="dataSource" ref="dataSource"/>
                <!-- Custom exception classes, these are optional -->
                <property name="exceptionClasses">
                    <map>
                        <entry key="uk_cars_license_number" value="org.jarbframework.violation.domain.LicenseNumberAlreadyExistsException"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>
 
    <!-- Repository used for testing -->
    <bean class="org.jarbframework.violation.domain.JpaCarRepository"/>

</beans>