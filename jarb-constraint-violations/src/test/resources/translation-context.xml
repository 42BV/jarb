<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:violations="http://www.jarbframework.org/schema/violations"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.jarbframework.org/schema/violations org/jarbframework/violation/configuration/xml/jarb-violations.xsd">
    
    <violations:translator id="translator">
        <violations:resolver>
            <ref bean="resolver"/>
        </violations:resolver>
        <violations:exception-factory>
            <bean class="org.jarbframework.violation.configuration.ConfigurableConstraintExceptionFactoryFactoryBean">
                <property name="customExceptionClasses">
                    <map>
                        <entry key="uk_cars_license_number" value="org.jarbframework.violation.domain.LicenseNumberAlreadyExistsException"/>
                    </map>
                </property>
            </bean>
        </violations:exception-factory>
    </violations:translator>

	<bean id="resolver" class="org.jarbframework.violation.configuration.DatabaseConstraintViolationResolverFactoryBean">
	    <property name="dataSource" ref="dataSource"/>
	</bean>

    <violations:enable-translations translator="translator"/>
    
    <!-- Repository used for testing -->
    <bean class="org.jarbframework.violation.domain.JpaCarRepository"/>

</beans>