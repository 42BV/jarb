<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:violations="http://www.jarbframework.org/schema/violations"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.jarbframework.org/schema/violations jarb-violations.xsd">
    
    <violations:translator id="translator" resolve-by-data-source="dataSource">
        <violations:exception-factory>
            <violations:configurable-exception-factory>
                <violations:exception-mapping expression="uk_cars_license_number" exception-class="org.jarbframework.violation.domain.LicenseNumberAlreadyExistsException"/>
            </violations:configurable-exception-factory>
        </violations:exception-factory>
    </violations:translator>

    <violations:enable-translations translator="translator"/>
    
    <!-- Repository used for testing -->
    <bean class="org.jarbframework.violation.domain.JpaCarRepository"/>

</beans>