<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Attempts to translate exceptions into more "obvious" constraint violation exceptions -->
    <bean class="org.jarbframework.violation.configuration.DatabaseConstraintExceptionTranslatingBeanPostProcessor">
        <property name="translator">
            <bean class="org.jarbframework.violation.configuration.DatabaseConstraintExceptionTranslatorFactoryBean">
                <property name="dataSource" ref="dataSource"/>
                <!-- Custom exception classes, these are optional -->
                <property name="customExceptionFactories">
                    <map>
	                    <entry>
	                        <key>
	                            <bean class="org.jarbframework.violation.factory.custom.ConstraintViolationMatcher" factory-method="name">
	                                <constructor-arg value="uk_cars_license_number"/>
	                            </bean>
	                        </key>
	                        <bean class="org.jarbframework.violation.factory.ReflectionConstraintExceptionFactory">
	                            <constructor-arg value="org.jarbframework.violation.domain.LicenseNumberAlreadyExistsException"/>
	                        </bean>
	                    </entry>
                    </map>
                </property>
            </bean>
        </property>
    </bean>
    
    <!-- Repository used for testing -->
    <bean class="org.jarbframework.violation.domain.JpaCarRepository"/>

</beans>