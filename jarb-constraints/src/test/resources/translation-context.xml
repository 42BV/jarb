<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:violations="http://www.jarbframework.org/schema/violations"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.jarbframework.org/schema/violations http://www.jarbframework.org/schema/violations/jarb-violations.xsd">
    
    <import resource="classpath:application-context.xml"/>
    
    <violations:translator id="translator">
	    <violations:configurable-exception-factory scan-exceptions="org.jarbframework.constraint.violation.domain"/>
    </violations:translator>

    <violations:enable-translations translator="translator"/>
    
    <!-- Repository used for testing -->
    <bean class="org.jarbframework.constraint.violation.domain.JpaCarRepository"/>

</beans>