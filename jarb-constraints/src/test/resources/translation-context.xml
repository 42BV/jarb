<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:constraints="http://www.jarbframework.org/schema/constraints"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.jarbframework.org/schema/constraints http://www.jarbframework.org/schema/constraints/jarb-constraints.xsd">
    
    <import resource="classpath:application-context.xml"/>

    <constraints:translate-exceptions data-source="dataSource" base-package="org.jarbframework.constraint.violation.domain"/>

    <!-- Repository used for testing -->
    <bean class="org.jarbframework.constraint.violation.domain.JpaCarRepository"/>

</beans>